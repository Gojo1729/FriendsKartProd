
 <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
           
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Reason for cancellation of the order</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
                 <div class="row">
            <div class="col-md-12">
                <% if(loggedUser && product.author.id.equals(loggedUser._id)) { %>
                <form action="/product/decline/<%= pid %>" method="get">
            <div class="form-group">
              <textarea class="form-control" rows="5" name="reason" placeholder="write here"></textarea>  
            </div>        
              
              <label><strong>note:this reason will be sent to the buyer</strong></label>
              <div>
               <input class="btn btn-primary" type="submit" value="Submit">   
              </div>
                </form>
                <% } else if(loggedUser && product.requestedBy == loggedUser._id.toString()) { %>
                   <form action="/revoke/<%= pid %>" method="post">
            <div class="form-group">
              <textarea class="form-control" rows="5" name="reason" placeholder="write here"></textarea>  
            </div>        
              
              <label><strong>note:this reason will be sent to the seller</strong></label>
              <div>
               <input class="btn btn-primary" type="submit" value="Submit">   
              </div>
                </form>
                
                <% } %>
             
      </div>
      <div class="modal-footer">
        
       
      
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.min.js"  integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT" crossorigin="anonymous"></script>
<script>
 $("document").ready(function(){
    $("#exampleModalLong").modal("show");  
 });
   
</script>





