<% include ../partials/header.ejs %>
<script async src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
   
<% if(loggedUser){ %>
  
    <div class="container">
   
       <h1><%= camps.length %> Products related to <span style="color:red">"<%= category %>" </span>category</h1>  
      <p>
       <form action="/products/specific/<%= category %>" method="GET" class="form-inline">
        <div class="form-group">
         <div id='container'>  
  <div class='cell'><input type='search' name="search" placeholder='Search <%= category %>' class="form-control"></div>
  <div class='cell'><input type="submit" class='button'  value="search"></div>
</div>
         </div>
       </form>
      </p>
    
    
    <div class="response">
     <div id="responsecontainer">
            <div class="row  text-center display-flex" style="display:flex; flex-wrap:wrap;">
          
               <% camps.forEach(function(camp){ %>
            <% if(camp.sale ){ %>
             <div class="col-lg-3 col-xs-6">
              <a href="/campgrounds/<%= camp._id %>">
                <div class="thumbnail" >
            <img class="img" src="<%= camp.image %>" >
        <div class="caption">
            <h4><%= camp.name %></h4>
            <h4><span style="color:red"><%= camp.price %></span> &#x20b9</h4>
        
     
        </div>
      </div>
              </a>
       
       </div>
   
     <% } %>
        
    <% }); %>
          
          
 
        </div>
    
    
    </div>
    </div>
       
    </div>
	   
     <% } %>


     
     
     
<% include ../partials/footer.ejs %>